    uint64_t m_family_id = 0;
	uint64_t m_troop_id = 0;
	uint64_t m_scene_id = 0;		    // 场景id
	uint32_t m_map_tid = 0;		        // 地图id
	uint32_t m_last_map_tid = 0;		// 最后所在静态
	uint32_t m_family_officer = 0;		// 家族职位
	uint32_t m_family_contribution = 0;	// 家族贡献是种货币(game同步过来)
	uint32_t m_country_officer = 0;		// 国家官职
	uint32_t m_channel_id = 0;			// 渠道id
	uint32_t m_create_time = 0;			// 创角时间
	uint32_t m_did = 0;					// 玩家数字id
	uint32_t m_charm = 0;				// 魅力值
	uint32_t m_plugin = 0;				// 主角模型
