#ifndef __CENTER_GLOBAL_USER_COMMON_HPP__
#define __CENTER_GLOBAL_USER_COMMON_HPP__

#include "macros.hpp"

struct global_user_common_t
{
	uint64_t m_uid = 0;
	std::string m_name = "";
	uint32_t m_last_logout_time = 0;
	uint32_t m_update_time = 0;			// 每日更新的时间
	uint32_t m_level = 0;
	uint32_t m_fighting_value = 0;		// 战斗力
	uint32_t m_hero_plugin = 0;			// 头像ID和边框ID(高16位头像ID 低16位边框ID)
