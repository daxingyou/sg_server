function get_items(){
  var items = new String(); 
  for(var i = 1; i < 6; i++){
      var it = '#item' + i;
      var nu = '#number' + i;
      var item = $(it).val();
      var number = $(nu).val();
      if (item != 0 && number != 0) {
        items = items + item + ':' + number + '$';
      }
    }
   
   return items;   
}

