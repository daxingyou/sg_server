<script type="text/javascript">
function page(json){
    layui.use('table',function(){
        var table = layui.table;

        table.render({
            elem:"#show_table",
            height: 380,
            //width:'100%',
            cols: [[ //标题栏
                {field: 'time', title: '<font size="3" face="楷体">日期</font>', Width: '25%',align: 'center',style:'background-color: #f2f2f2;'}
                ,{field: 'dau', title: '<font size="3" face="楷体">日活跃数量(dau)</font>', Width: '25%',align: 'center',style:'background-color: #f2f2f2;'}
                ,{field: 'wau', title: '<font size="3" face="楷体">周活跃数量(wau)</font>', Width: '25%',align: 'center',style:'background-color: #f2f2f2;'}
                ,{field: 'mau', title: '<font size="3" face="楷体">月活跃数量(mau)</font>', Width: '25%',align: 'center',style:'background-color: #f2f2f2;'}
                ,{field: 'dm', title: '<font size="3" face="楷体">日活跃占月活跃的百分比(dau/mau)</font>', Width: '25%',align: 'center',style:'background-color: #f2f2f2;'}
        ]],
        data:json,
        page: true, //是否显示分页
        limit: 7 //每页默认显示的数量
        });
    });    
}
function get_show_data(json){
    var dau = new Object();
    dau.name = "日活跃数量(个)";
    dau.data = [];

    var wau = new Object();
    wau.name = "周活跃数量(个)";
    wau.data = [];

    var mau = new Object();
    mau.name = "月活跃数量(个)";
    mau.data = [];

    var dm = new Object();
    dm.name = "日活跃占月活跃的百分比(%)";
    dm.data = [];

    var series_list = new Array();
    series_list.push(dau);
    series_list.push(wau);
    series_list.push(mau);
    series_list.push(dm);
    for (var i = 0; i < json.length; i++){
       series_list[0].data.push(parseInt(json[i].dau));
       series_list[1].data.push(parseInt(json[i].wau));
       series_list[2].data.push(parseInt(json[i].mau));
       series_list[3].data.push(parseFloat(json[i].dm));
    } 

    return series_list;
}  

function show_map(json){
    var date_list = new Array();
    for (var i = 0; i < json.length; i++){
        date_list.push(json[i].time);
    }
    Highcharts.chart('map_show', {
         title: {
            text: '活跃玩家相关图形统计图',
            x: -20 //center
        },
        xAxis: {
            categories: date_list
        },
        yAxis: {
            title: {
                text: '数据统计'
            },
            plotLines: [{
                value: 0,
                width: 1,
                color: '#808080'
            }]
        },
        tooltip: {
            valueSuffix: ''
        },
        legend: {
            layout: 'vertical',
            align: 'right',
            verticalAlign: 'middle',
            borderWidth: 0
        },
        series: get_show_data(json)
    });
}


$(function () {
        $(document).ready(function () {
            var storage = window.sessionStorage;
            console.log(storage);
            if(storage.account == null){
                window.location.href="/login.html"; 
            }

            var time = new Date().getTime();
            var time_max = time - (1 * 24 * 3600 * 1000);
            var time_min = time - (7 * 24 * 3600 * 1000);
            var cur_max = new Date(time_max);
            var cur_min = new Date(time_min);
            var time_max = cur_max.getFullYear() + '-' + addzero(cur_max.getMonth() + 1) + '-' + addzero(cur_max.getDate());
            var time_min = cur_min.getFullYear() + '-' + addzero(cur_min.getMonth() + 1) + '-' + addzero(cur_min.getDate());
            document.getElementById('logmax').value = time_max;
            document.getElementById('logmin').value = time_min;
            //query_db(time_min,time_max,2);
        });    
 });



function addzero(v) {
    if (v < 10) return '0' + v;
    return v.toString();
}
function getLocalTime(nS) {     
    return new Date(parseInt(nS) * 1000).toLocaleString().replace(/年|月/g, "-").replace(/日/g, " ");      
}     

function query_db(min_time,max_time,type){
    var datemin = min_time;
    var datemax = max_time;
    var query_type = type;
    console.log(datemin,datemax,type);
    $.ajax({
        type: "GET",
        url: '../php/data.php',
        dataType: "json",
        data: {
           "query_type": query_type,
           "datemin": datemin,
           "datemax": datemax
        },
        success: function (json) {
            $('#show_table tr:gt(0)').remove();//删除之前的数据
            console.log(json.length);
            var s = '';
            for (var i = 0; i < json.length; i++)
                s += '<tr class="text-c"><td>' + json[i].time + '</td><td>' + json[i].dau + '</td><td>' + json[i].wau + '</td><td>' + json[i].mau + '</td><td>' + json[i].dm + '</td></tr>';
            page(json);
            show_map(json);
        },
        error: function (er) {
            console.log(er);
        },

    });
}

function click_query_common(param,type){
    var time = new Date().getTime();
    var time_max = time - (1 * 24 * 3600 * 1000);
    var time_min = time - (param * 24 * 3600 * 1000);
    var cur_max = new Date(time_max);
    var cur_min = new Date(time_min);

    var time_max = cur_max.getFullYear() + '-' + addzero(cur_max.getMonth() + 1) + '-' + addzero(cur_max.getDate());
    var time_min = cur_min.getFullYear() + '-' + addzero(cur_min.getMonth() + 1) + '-' + addzero(cur_min.getDate());
    console.log(time_min);
    console.log(time_max);
    document.getElementById('logmax').value = time_max;
    document.getElementById('logmin').value = time_min;
    query_db(time_min,time_max,type);
}

function seach_query(){
    var datemin = $('#logmin').val();
    var datemax = $('#logmax').val();
    query_db(datemin,datemax,2);
}

function yesterday_query(){
   click_query_common(1,2);
}

function Threeday_query(){
   click_query_common(3,2);
}

function Sevenday_query(){
   click_query_common(7,2);
}

function Thirtyday_query(){
   click_query_common(30,2);
}   









</script> 
